{
  "training": {
    "epochs": 10,
    "batch_size": 2048,
    "learning_rate": 0.001,
    "device": "auto",
    "compile": true,
    "checkpoint_interval": 5,

  },
  "plugins": {
    "console_out": {
      "enabled": true,
      "config": {
        "update_interval": 1,
        "show_progress": true
      }
    },
    "tensorboard": {
      "enabled": true,
      "config": {
        "log_dir": "runs/experiment",
        "flush_interval": 10
      }
    },
    "wandb": {
      "enabled": false,
      "config": {
        "project": "my-project",
        "entity": "my-username",
        "tags": ["experiment", "fashion-mnist"]
      }
    }
  },
  "metrics": {
    "metrics": ["accuracy", "precision", "recall"],
    "custom_metrics": {
      "f1_score": {
        "type": "f1",
        "average": "macro"
      }
    }
  },
  "hyperparameters": {
    "lr": 0.001,
    "batch_size": 2048,
    "optimizer": "adam",
    "weight_decay": 0.0001
  },
  "optuna": {
    "enabled": false,
    "study_name": "fashion_mnist_optimization",
    "n_trials": 100,
    "hyperparameters": {
      "lr": {
        "name": "lr",
        "type": "loguniform",
        "low": 1e-5,
        "high": 1e-1
      },
      "batch_size": {
        "name": "batch_size",
        "type": "categorical",
        "choices": [64, 128, 256, 512, 1024, 2048]
      }
    }
  }
}
